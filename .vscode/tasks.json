{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "cargo aoc",
			"problemMatcher": [
				"$rustc"
			],
			"options": {
				"env": {
					"RUST_BACKTRACE": "1" 
				},
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},

			"label": "Rust: cargo aoc build"
		},
		{
			"type": "shell",
			"command": "cargo aoc bench",
			"problemMatcher": [
				"$rustc"
			],
			"options": {
				"env": {
					"RUST_BACKTRACE": "1" 
				},
			},
			"label": "Rust: cargo aoc bench"
		},
		{
			"type": "cargo",
			"subcommand": "test",
			"problemMatcher": [
				"$rustc"
			],
			"label": "Rust: run tests"
		}
	]
}